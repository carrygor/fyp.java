<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:task="http://www.springframework.org/schema/task"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
          http://www.springframework.org/schema/context
	 	  http://www.springframework.org/schema/context/spring-context.xsd
	 	  http://www.springframework.org/schema/aop
          http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
          http://www.springframework.org/schema/task
          http://www.springframework.org/schema/task/spring-task.xsd">


    <!-- Spring容器初始化完成监听器 -->
    <bean class="cn.com.youplus.common.util.listener.ApplicationContextListener" />
    <!-- ApplicationContext -->
    <bean id="springContextUtil" class="cn.com.youplus.common.util.SpringContextUtil" />

    <!-- 定义配置的Annotation扫描包 -->
    <context:component-scan base-package="cn.com.youplus.thirdparty.rpc.service" />

    <!-- 配置进行解密  -->
    <beans>
        <bean id="propertyConfigurer" class="cn.com.youplus.common.util.plugin.EncryptPropertyPlaceholderConfigurer">
            <property name="locations">
                <list>
                    <value>classpath:dubbo.properties</value>
                    <value>classpath:dubbo-master.properties</value>
                    <value>classpath:ehcache.properties</value>
                    <value>classpath:mysql.properties</value>
                    <!-- 以下的公共配置需要去youplus-common里查找 -->
                    <value>classpath*:config/jdbc.properties</value>
                    <value>classpath*:config/weixin.properties</value>
                    <value>classpath*:config/message_queue.properties</value>
                </list>
            </property>
        </bean>
    </beans>

    <beans profile="slave">
        <bean id="propertyConfigurer4Slave" class="cn.com.youplus.common.util.plugin.EncryptPropertyPlaceholderConfigurer">
            <property name="locations">
                <list>
                    <value>classpath:dubbo-slave.properties</value>
                </list>
            </property>
        </bean>
    </beans>


    <beans>
        <!--<import resource="classpath:META-INF/spring/spring-dubbo-provider-order.xml" />-->
        <!-- 以下需要去Common工程中查找 -->
        <!--数据连接相关配置-->
        <aop:aspectj-autoproxy expose-proxy="true"/>

        <!-- 开启spring task -->
        <task:annotation-driven/>
        <import resource="classpath*:META-INF/common/applicationContext-weixin-config.xml" />

        <!-- spring thread pool executor -->
        <bean id="taskExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
            <!-- 线程池维护线程的最少数量 -->
            <property name="corePoolSize" value="5" />
            <!-- 允许的空闲时间 -->
            <property name="keepAliveSeconds" value="200" />
            <!-- 线程池维护线程的最大数量 -->
            <property name="maxPoolSize" value="1000" />
            <!-- 缓存队列 -->
            <property name="queueCapacity" value="20" />
            <!-- 对拒绝task的处理策略 -->
            <property name="rejectedExecutionHandler">
                <bean class="java.util.concurrent.ThreadPoolExecutor$CallerRunsPolicy" />
            </property>
        </bean>
    </beans>

</beans>